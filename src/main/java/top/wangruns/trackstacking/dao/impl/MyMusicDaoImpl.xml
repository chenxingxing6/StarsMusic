<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="top.wangruns.trackstacking.dao.MyMusicDao">
	
	<select id="selectCollectedSong" parameterType="top.wangruns.trackstacking.model.User"
		resultType="top.wangruns.trackstacking.model.TrendingSong">
		select * from collection,song where userId=#{userId} and collection.songId=song.songId
	</select>
	
	<select id="selectMyRecentSong" parameterType="top.wangruns.trackstacking.model.User"
		resultType="top.wangruns.trackstacking.model.TrendingSong">
		select * from song where songId in
		(select distinct songId from play where userId=#{userId})
	</select>
	

</mapper>